<div>
	<center>
		<div class="block mx-auto my-12 p-8 bg-white w-1/3 border-gray-200 rounded-lg
		shadow-lg text-gray-800">
  
  <h1 class="text-3x1 font-bold text-center">Login</h1>

	<img src="https://thumbs.dreamstime.com/b/user-blue-purple-gradient-icon-user-blue-purple-gradient-icon-man-symbol-146544711.jpg" class="rounded mx-auto d-block" width="103" height="103">
	
	<form action="" method="post" class="mt-4">
		<input type="email" name="email" placeholder="correo electrónico" 
		class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
		bg-gray-300 focus:bg-white" required>
		
		<input type="password" name="password" placeholder="contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
		bg-gray-300 focus:bg-white" required>
		
		<div class="btn-group me-2" role="group" aria-label="Second group">
            <button type="submit" class="btn btn-primary border-2">Ingresar</button>
        </div>
	
	{{#if error}}
		<p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
	{{/if}}
	</form>
	</center>
	</div>
</div>